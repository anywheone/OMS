<UserControl x:Class="OMS.Client.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 数値入力 -->
            <TextBox Grid.Column="0"
                     Text="{Binding Value, ElementName=Root, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     Padding="8,6"
                     BorderThickness="0"
                     FontSize="14"/>

            <!-- ボタン -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Width="24">
                <Button x:Name="UpButton"
                        Content="▲"
                        FontSize="8"
                        Padding="0"
                        Height="15"
                        BorderThickness="0"
                        Click="UpButton_Click"/>
                <Button x:Name="DownButton"
                        Content="▼"
                        FontSize="8"
                        Padding="0"
                        Height="15"
                        BorderThickness="0"
                        Click="DownButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
