<UserControl x:Class="OMS.Client.Controls.Utilities.NumericUpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="150"
             x:Name="root">
    <UserControl.Resources>
        <Style x:Key="SpinButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{Binding BorderBrush, ElementName=root}"
            BorderThickness="{Binding BorderThickness, ElementName=root}"
            Background="{Binding Background, ElementName=root}"
            CornerRadius="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 数値入力テキストボックス -->
            <TextBox x:Name="txtValue"
                     Grid.Column="0"
                     Text="{Binding FormattedValue, ElementName=root, Mode=OneWay}"
                     VerticalContentAlignment="Center"
                     Padding="8,0"
                     BorderThickness="0"
                     PreviewTextInput="TxtValue_PreviewTextInput"
                     PreviewKeyDown="TxtValue_PreviewKeyDown"
                     LostFocus="TxtValue_LostFocus"
                     GotFocus="TxtValue_GotFocus"/>

            <!-- スピンボタン -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        Visibility="{Binding ShowUpDownButtons, ElementName=root,
                                   Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button x:Name="btnUp"
                        Style="{StaticResource SpinButtonStyle}"
                        Height="16"
                        Click="BtnUp_Click">
                    <Path Data="M 0,4 L 4,0 L 8,4 Z"
                          Fill="#606060"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Button>
                <Button x:Name="btnDown"
                        Style="{StaticResource SpinButtonStyle}"
                        Height="16"
                        Click="BtnDown_Click">
                    <Path Data="M 0,0 L 4,4 L 8,0 Z"
                          Fill="#606060"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
