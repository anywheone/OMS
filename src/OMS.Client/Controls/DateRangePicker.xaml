<UserControl x:Class="OMS.Client.Controls.DateRangePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="開始日:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate, ElementName=Root}"/>

            <TextBlock Grid.Column="2" Text="終了日:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate, ElementName=Root}"/>
        </Grid>
    </Border>
</UserControl>
