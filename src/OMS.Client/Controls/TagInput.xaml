<UserControl x:Class="OMS.Client.Controls.TagInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Padding="5">
        <StackPanel>
            <!-- タグ表示エリア -->
            <ItemsControl ItemsSource="{Binding Tags, ElementName=Root}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#E3F2FD"
                                BorderBrush="#2196F3"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10,4"
                                Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" FontSize="12" Foreground="#1976D2"/>
                                <Button Content="×"
                                        FontSize="14"
                                        Margin="5,0,0,0"
                                        Padding="4,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#1976D2"
                                        Cursor="Hand"
                                        Tag="{Binding}"
                                        Click="RemoveTag_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- 入力エリア -->
            <TextBox x:Name="InputTextBox"
                     Margin="0,5,0,0"
                     Padding="5"
                     BorderThickness="0"
                     KeyDown="InputTextBox_KeyDown"/>
        </StackPanel>
    </Border>
</UserControl>
